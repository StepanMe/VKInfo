<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_avatar"
        android:layout_alignParentStart="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="https://sun1-20.userapi.com/s/v1/if1/q7NfJ6GtFLYfBpJTUyv8KiH2IrKoacCL8jNV7xLbk__sws-fl6OWGM5SnlSYJXfREzsmfpm0.jpg?size=100x0&amp;quality=96&amp;crop=514,119,337,337"/>

    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_first_name"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/cv_avatar"
        android:layout_marginStart="16dp"
        android:fontFamily="monospace"
        tools:text="Степан"/>

    <TextView
        android:id="@+id/tv_last_name"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_below="@id/tv_first_name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_toEndOf="@id/cv_avatar"
        android:layout_marginStart="16dp"
        android:fontFamily="monospace"
        tools:text="Медников"/>

    <TextView
        android:id="@+id/tv_vkid"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        tools:text="ID: 1234567"
        android:fontFamily="monospace"/>


</RelativeLayout>